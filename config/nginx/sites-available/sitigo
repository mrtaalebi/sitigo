upstream web {
	server web:8000 fail_timeout=0;
}

server {
        listen 80;

        server_name igo-official.ir;
        return 301 https://igo-official.ir:443$request_uri;
}


server {
    listen 443 default_server ssl;

    server_name igo-official.ir
    client_max_body_size 8M;
    keepalive_timeout    69;

    ssl_certificate     /sitigo/cert/fullchain.pem;
    ssl_certificate_key /sitigo/cert/privkey.pem;

    ignore_invalid_headers on;

    location / {
        proxy_redirect      off;
        proxy_set_header    Host                    $host:$server_port;
        proxy_set_header    X-Real-IP               $remote_addr;
        proxy_set_header    X-Forwarded-For         $proxy_add_x_forwarded_for;
        proxy_set_header    X-Forwarded-Proto       $scheme;
        proxy_pass          http://web;
    }

   location /static/ {
        root            /sitigo/files/;
        access_log      on;
        log_not_found   on;
	
        proxy_buffering off;
		proxy_ignore_client_abort on;
		
        add_header Access-Control-Allow-Origin *;
        expires 30d;
    }

    location /media/ {
        root            /sitigo/files/;
        access_log      on;
        log_not_found   on;

        add_header 'Access-Control-Allow-Origin' '*';
        add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
        add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
        add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range';
        expires 30d;
    }

    location /favicon.ico {
        root            /sitigo/files/static/files/favicon.ico;
        access_log      on;
        log_not_found   on;
    }

    location /.well-known/ {
        root            /var/www/letsencrypt/;
        access_log      on;
        log_not_found   on;
    }

}
